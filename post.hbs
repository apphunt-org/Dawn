{{!< default}}

<div class="content-area">
    <main class="site-main">
        {{#post}}
            {{> content width="wide"}}
            {{#is "post"}}
                <div style="padding: 24px;">
                    {{comments}}
                </div>
            {{/is}}
        {{/post}}
        {{#is "post"}}
            {{#if @custom.show_related_posts}}
                {{> related}}
            {{/if}}
            {{> comment}}
        {{/is}}
    </main>
</div>
